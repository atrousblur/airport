<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.airport.erp.insa">
	<select id="emplist" resultType="emp">
		select * from member
	</select>
	
	<insert id="empinsert" parameterType="emp">
		insert into member
		values(emp_seq.nextVal,#{empid},#{pwd},#{name},#{birth},#{gender},
		#{phone},#{email},#{position},#{state},sysdate,null,#{deptno})
	</insert>
	
	<update id="empchange" parameterType="emp">
		update member 
		set state=#{state}
		where empno=#{empno}
	</update>
	
	<update id="empupdate" parameterType="emp">
		update member 
		set pwd=#{pwd},phone=#{phone},email=#{email},position=#{position},enddate=#{enddate},deptno=#{deptno} 
		where empno=#{empno}
	</update>

	
</mapper>


