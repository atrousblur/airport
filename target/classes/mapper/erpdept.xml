<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.airport.erp.dept">
	<select id="deptlist" resultType="dept">
		select * from dept order by deptctg1 asc
	</select>
	
	<insert id="deptinsert" parameterType="dept">
		insert into dept 
		values(#{deptno},#{deptctg1},#{deptctg2},#{deptctg3},#{tel},#{task},#{mgr})
	</insert>
	
	<delete id="deptdelete" parameterType="String">
		delete from dept where deptno=#{deptno}
	</delete>
	
	<update id="deptupdate" parameterType="String">
		update dept 
		set deptctg1=#{deptctg1},deptctg2=#{deptctg2},deptctg3=#{deptctg3},tel=#{tel},task=#{task},mgr=#{mgr} 
		where deptno=#{deptno}
	</update>

	<select id="getctg2" resultType="dept" parameterType="String">
		select * from dept 
		where deptctg1=#{deptctg1}
		order by deptctg2 asc
	</select>
	
	<select id="getctg3" resultType="dept" parameterType="String">
		select * from dept 
		where deptctg2=#{deptctg2}
		order by deptctg3 asc
	</select>
</mapper>


