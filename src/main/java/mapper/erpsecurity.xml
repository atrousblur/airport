<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.airport.erp.security">
	<insert id="secinsert" parameterType="security">
		insert into security
		values(sec_seq.nextVal,#{empno},#{img},#{appdate},null,null,'2')
	</insert>
	
	<select id="seccheck" parameterType="Integer" resultType="security">
		select * from security
		where empno=#{empno}
	</select>

	<update id="reapply" parameterType="security">
		update security
		set img=#{img}, appdate=#{appdate}, issuedate=null, exdate=null, scstate='2', 
		where scno=#{scno}
	</update>
</mapper>

